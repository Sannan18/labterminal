extends ../layout

block content
    h1 Add New Product
    form(action="/products/add",method="post")
        .form-group
            label(for="name") P.Name
            input#name(type="text", class="form-control", name="name")
        .form-group
            label(for="price") P.Price
            input#price(type="text", class="form-control", name="price")
        .form-group
            label(for="description") P.description
            input#description(type="text", class="form-control", name="description")
        .form-group
            label(for="rating") P.Rating
            input#rating(type="number", min="0", max="5", class="form-control", name="rating")
        input(type="submit", class="btn btn-info")
             